@model Produto
@using BotecoPoker.Dominio.Entidades
@{
    var erro = (ViewBag?.erro == "" || ViewBag?.erro == null) ? "" : ViewBag.erros;
    var classeErro = (erro == "" || erro == null) ? "" : "alert alert-danger";
    IEnumerable<SelectListItem> comboTipoProduto = ViewBag.ComboTiposProdutos;
}
<div align="right">
    <a type="button" class="btn btn-dark btn-lg" href="@Url.Action("FiltroProduto","Produto")">Voltar</a>
</div>
<form class="form-control-lg" method="post" action="@Url.Action("AlterarProduto","Produto")">

    <h1 align="center">Alteração de Produtos</h1>
    <div class="@classeErro" role="alert">
        @erro
    </div>

    <fieldset class="form-control-lg">

        <span class="form-row">
            <input name="Id" hidden value="@Model.Id">
            <input name="DataCadastro" hidden value="@Model.DataCadastro">
            <input name="IdUsuarioCadastro" hidden value="@Model.IdUsuarioCadastro">

            <span class="form-group col-md-3">
                <label for="sel1"><b>Tipo Produto</b></label>
                    @Html.DropDownList("IdTipoProduto", comboTipoProduto, new { @class = "form-control" })
            </span>

            <span class="form-group col-md-3">
                <label for="Nome" class=""><b>Nome</b></label>
                <input type="text" name="Nome" class="form-control" placeholder="Nome do Produto" maxlength="30" required value="@Model.Nome">
            </span>
            <span class="form-group col-md-3">
                <label for="ValorVenda"><b>Valor de Venda</b></label>
                <input type="tel" class="form-control" id="Valor" name="Valor" placeholder="Valor de Venda" maxlength="6" required value="@Model.Valor">
            </span>
            <span class="form-group col-md-3">
                <label for="ValorCompra"><b>Valor de Compra</b></label>
                <input type="tel" class="form-control" id="ValorCompra" name="ValorCompra" maxlength="6" placeholder="Valor de Compra" value="@Model.ValorCompra">
            </span>
            <span class="form-group col-md-3">
                <label for="ValorCompra"><b>Estoque</b> (Opcional)</label>
                <input type="tel" class="form-control" id="QtdEstoque" name="QtdEstoque" maxlength="4" placeholder="Quantidade Estoque" value="@Model.QtdEstoque">
            </span>
        </span>
    </fieldset>
    <span class="">
        <input type="submit" class="btn-dark btn-lg btn-block" value="Alterar" />
    </span>
</form>
