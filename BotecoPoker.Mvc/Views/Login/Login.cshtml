@{
    Layout = "~/Views/Shared/LayoutLogin.cshtml";
    var erro = (ViewBag?.erro == "" || ViewBag?.erro == null) ? "" : ViewBag.erro;
    var classeErro = (erro == "" || erro == null) ? "" : "alert alert-danger";
}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header"><b>Bem Vindo(a)</b></div>
        <div class="card-body">
            <form method="post" action="@Url.Action("Login","Login")" id="login">
                <div class="@classeErro" role="alert">
                    @erro
                </div>
                <div class="form-group">
                    <label for="Usuario">Usuário</label>
                    <input class="form-control" id="usuario" name="usuario" type="text" placeholder="Usuário">
                </div>
                <div class="form-group">
                    <label for="Senha">Senha</label>
                    <input class="form-control" id="senha" name="senha" type="password" placeholder="Senha">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" id="mostraSenha" onclick="MostrarSenha()"> Mostrar senha
                        </label>
                    </div>
                </div>
                <input type="submit" class="btn btn-dark btn-block" value="Entrar" />
            </form>
        </div>
    </div>
</div>




